{
  "capture_device": "default",
  "playback_device": "default",
  "stream_format": "opus",
  "playback_sample_rate": 48000,
  "playback_channels": 2,
  "playback_period_size": 1024,
  "gui_local_port": 5678,
  "gui_remote_port": 5679,
  "gui_local_ip": "0.0.0.0",
  "gui_remote_ip": "127.0.0.1",
  "gui_buffer_size": 4096,
  "ws_url": "wss://api.tenclass.net/xiaozhi/v1/",
  "ota_url": "https://api.tenclass.net/xiaozhi/ota/",
  "ws_token": "test-token",
  "device_id": "dc:ec:4f:5d:96:29",
  "client_id": "7f0b7da3-b51a-41f6-93bf-19d4713ca4fc",
  "hello_format": "opus",
  "hello_sample_rate": 24000,
  "hello_channels": 1,
  "hello_frame_duration": 20,
  "enable_tts_display": false,
  "mcp": {
    "enabled": true,
    "tools": [
      {
        "name": "get_system_status",
        "description": "获取当前设备的系统状态，包括 CPU 负载、内存使用率、磁盘空间和运行时间。当用户询问系统压力、运行多久、负载情况时调用。",
        "input_schema": {
          "type": "object",
          "properties": {}
        },
        "type": "subprocess",
        "executable": "./test_tool.sh",
        "mode": "sync",
        "timeout_ms": 5000
      },
      {
        "name": "set_brightness",
        "description": "设置设备屏幕的亮度。当用户说'调亮一点'或'把亮度设置为80'时调用。",
        "input_schema": {
          "type": "object",
          "properties": {
            "brightness": {
              "type": "integer",
              "minimum": 0,
              "maximum": 100,
              "description": "目标亮度值，范围从0（最暗）到100（最亮）"
            }
          },
          "required": ["brightness"]
        },
        "type": "subprocess",
        "executable": "./set_brightness.py",
        "mode": "sync",
        "timeout_ms": 5000
      },
      {
        "name": "long_time_write_task",
        "description": "启动一个后台写入任务。文件会自动保存到脚本所在目录。当用户说'启动长时间写入任务'或'开始写入内容'时调用。",
        "input_schema": {
          "type": "object",
          "properties": {
            "text": {
              "type": "string",
              "description": "要循环写入的文本内容"
            }
          },
          "required": ["text"]
        },
        "type": "subprocess",
        "executable": "./incremental_writer.py",
        "mode": "background",
        "timeout_ms": 15000,
        "notify": {
          "type": "disabled"
        }
      },
      {
        "name": "remote_ai_tool",
        "description": "调用远程AI服务接口进行推理。用于复杂的AI任务处理。",
        "input_schema": {
          "type": "object",
          "properties": {
            "prompt": {
              "type": "string",
              "description": "输入文本"
            }
          },
          "required": ["prompt"]
        },
        "type": "http",
        "url": "http://localhost:8080/api/tool",
        "method": "POST",
        "mode": "sync",
        "timeout_ms": 10000
      },
      {
        "name": "iot_controller",
        "description": "通过TCP Socket控制内网IoT设备。用于智能家居场景。",
        "input_schema": {
          "type": "object",
          "properties": {
            "command": {
              "type": "string",
              "description": "设备控制命令"
            }
          },
          "required": ["command"]
        },
        "type": "tcp",
        "address": "localhost:9999",
        "mode": "sync",
        "timeout_ms": 2000
      }
    ]
  }
}
